<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            line-height: 1.6;
        }
        
        .container {
            max-width: 800px;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: center;
        }

        th {
            background-color: purple;
            color: white;
        }
        
        hr {
            border: 0;
            border-top: 1px solid #ccc;
            margin: 20px 0;
        }

        p {
            margin-bottom: 10px;
        }

        img {
            max-width: 100%;
            height: auto;
            margin: 20px 0;
        }

        small {
            font-size: 80%;
        }

        a {
            display: block;
            text-align: center;
            margin-top: 20px;
            text-decoration: none;
            background-color: purple;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
        }

        a.delete {
            background-color: black;
        }
        a:hover {
            background-color: black;
        }
        
        .logout {
            position: absolute; 
            top: 10px; 
            right: 20px;
            text-decoration: none;
            background-color: black;
            color: white;
            padding: 5px 20px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
    <a href="/logout" class="logout">Logout</a>
    <h1>Item Detail Information: <%= item.item %></h1>
    <hr/>
    <p>Staff Name: <b><%= user.name %> </b>,  Staff ID: <b><%= user.id %></b>,  Login from <b><%= user.type %></b>,</p>
    <h2>Item Details</h2>
    <hr>
    <table border = "1">
      <tr>
        <th>Item</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Description</th>
      </tr>
      <tr>
        <td><%= item.item %></td>
        <td>$<%= item.price %></td>
        <td><%= item.quantity %></td>
        <td><%= item.description %></td>
      </tr>
    </table>

    <% if (item.image) { %>
        <img src="data:image/jpg;base64, <%= item.image %>"><br>
    <% } %>

    <% if (item.userid) { %>
        <p><small>Added by Staff ID: <%= item.userid %></small></p>
    <% } %>
    <a href="/edit?_id=<%= item._id %>">Edit</a>
	<a href="/delete?_id=<%= item._id %>">All Shipped</a>
    <a href="/delete?_id=<%= item._id %>">Delete</a>
    <a href="/">Home</a>
    </div>
</body>
</html>
